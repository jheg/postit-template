<%= render 'shared/errors', the_object: @the_post %>

<div class="well">
  <%= form_for @the_post do |f| %>
    <div class="control-group">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class="control-group">
      <%= f.label :url %>
      <%= f.text_field :url %>
    </div>
    <div class="control-group">
      <%= f.label :description %>
      <%= f.text_area :description, rows: 5 %>
    </div>

    <div class="control-group">
      <%= f.label :Categories %>
      <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
        <% cb.label(class: "checkbox inline"){cb.check_box(class: "checkbox") + cb.text} %>
      <% end %>
    </div>
<!-- 
    <select name='options[]' multiple='multiple'>
      <% Category.all.each do |cat| %>
        <option value="<%= cat.id %>"><%= cat.name %></option>
      <% end %>
    </select> -->




    <br />
      <%= f.submit(@the_post.new_record? ? "Create Post" : "Update Post", class: 'btn btn-primary btn-small') %>
  <% end %>
</div>